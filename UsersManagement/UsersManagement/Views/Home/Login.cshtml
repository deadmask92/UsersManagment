@model UsersManagement.Models.LoginForm

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="panel panel-primary text-center" style="width:50%; margin-left:25%">
        <div class="panel-heading text-center">
            <h1>LOGIN</h1>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label class="">Username:</label> @Html.TextBoxFor(x => x.Username, new { @class = "form-control", id = "TxUsername" })
                </div>

                <div class="form-group">
                    <label class="">Password:</label> @Html.PasswordFor(x => x.Password, new { @class = "form-control", id = "TxPassword" })
                </div>

                <div class="text-center">
                    <input type="submit" value="Login" class="btn btn-primary btn-lg" />
                </div>
            }
        </div>
    </div>
</body>
</html>
